<body>

    <div id="ui">
        <h1>WILD HORSE FREEDOM</h1>
        <div class="stat-box" style="margin-top:5px;">Total Range Score: <span id="score">0</span></div>
        <div id="stats-container">
            <div class="stat-box">Actions: <span id="removals">25</span></div>
            <div class="stat-box">Horses: <span id="horse-count">0</span></div>
        </div>
    </div>

    <div id="instructions">Strategy: Connect pastures to multiply the total range score!</div>

    <div id="game-over">
        <h2>OUT OF ACTIONS</h2>
        <p>Your horses reached a total combined range of:</p>
        <h1 id="final-score" style="font-size: 3rem; color: #2e7d32;">0</h1>
        <button onclick="resetGame()">Try for a better range</button>
    </div>

    <canvas id="gameCanvas"></canvas>

<script>
    const canvas = document.getElementById('gameCanvas');
    const ctx = canvas.getContext('2d');
    const removalsDisplay = document.getElementById('removals');
    const scoreDisplay = document.getElementById('score');
    const horseCountDisplay = document.getElementById('horse-count');
    const gameOverScreen = document.getElementById('game-over');
    const finalScoreDisplay = document.getElementById('final-score');

    let width, height, rows, cols;
    const cellSize = 45;
    let grid = [];
    let horses = [];
    let removalsLeft = 25;
    let totalScore = 0;

    function init() {
        width = window.innerWidth;
        height = window.innerHeight;
        canvas.width = width;
        canvas.height = height;

        cols = Math.floor(width / cellSize);
        rows = Math.floor(height / cellSize);

        removalsLeft = 25;
        gameOverScreen.style.display = 'none';

        // Initialize grid as all fences
        grid = Array.from({ length: rows }, () => Array(cols).fill(1));

        // Create random grass pockets
        for (let i = 0; i < 18; i++) {
            let rx = Math.floor(Math.random() * (cols - 3)) + 1;
            let ry = Math.floor(Math.random() * (rows - 3)) + 1;
            for(let yO=0; yO<2; yO++) {
                for(let xO=0; xO<2; xO++) {
                    grid[ry + yO][rx + xO] = 0;
                }
            }
        }

        // Spawn 8-12 horses in those grass pockets
        horses = [];
        const targetHorses = 8 + Math.floor(Math.random() * 5);
        let attempts = 0;
        while (horses.length < targetHorses && attempts < 1000) {
            let rx = Math.floor(Math.random() * cols);
            let ry = Math.floor(Math.random() * rows);
            if (grid[ry][rx] === 0) {
                // Check if horse is already there
                const exists = horses.some(h => Math.floor(h.x/cellSize) === rx && Math.floor(h.y/cellSize) === ry);
                if (!exists) {
                    horses.push(new Horse(rx * cellSize + cellSize/2, ry * cellSize + cellSize/2));
                }
            }
            attempts++;
        }

        horseCountDisplay.innerText = horses.length;
        calculateScore();
    }

    class Horse {
        constructor(x, y) {
            this.x = x;
            this.y = y;
            this.speed = 0.7 + Math.random() * 0.8;
            this.color = ['#5d4037', '#8d6e63', '#4e342e', '#795548', '#d7ccc8'][Math.floor(Math.random() * 5)];
            this.angle = Math.random() * Math.PI * 2;
            this.size = 10;
            this.state = 'idle';
            this.timer = Math.random() * 100;
        }

        update() {
            if (this.state === 'idle') {
                this.timer--;
                if (this.timer <= 0) {
                    this.state = 'walking';
                    this.timer = 100 + Math.random() * 200;
                    this.angle += (Math.random() - 0.5);
                }
            } else {
                let nextX = this.x + Math.cos(this.angle) * this.speed;
                let nextY = this.y + Math.sin(this.angle) * this.speed;

                const gx = Math.floor(nextX / cellSize);
                const gy = Math.floor(nextY / cellSize);

                if (gx >= 0 && gx < cols && gy >= 0 && gy < rows && grid[gy][gx] === 0) {
                    this.x = nextX;
                    this.y = nextY;
                } else {
                    this.angle += Math.PI / 2 + (Math.random() - 0.5);
                    if (Math.random() > 0.8) this.state = 'idle';
                }

                this.timer--;
                if (this.timer <= 0) {
                    this.state = 'idle';
                    this.timer = 60 + Math.random() * 120;
                }
            }
        }

        draw() {
            ctx.save();
            ctx.translate(this.x, this.y);
            ctx.rotate(this.angle);
            ctx.fillStyle = this.color;
            ctx.fillRect(-this.size, -this.size/2, this.size * 1.5, this.size); // Body
            ctx.fillStyle = '#00000033';
            ctx.fillRect(this.size/2, -this.size/2 - 1, 4, 6); // Head
            ctx.restore();
        }
    }

    // Flood Fill to calculate area available to a specific tile
    function getPastureSize(startX, startY) {
        let visited = new Array(rows).fill(0).map(() => new Array(cols).fill(false));
        let stack = [[startX, startY]];
        visited[startY][startX] = true;
        let count = 0;

        while (stack.length > 0) {
            let [cx, cy] = stack.pop();
            count++;

            const neighbors = [[0,1], [0,-1], [1,0], [-1,0]];
            for (let [dx, dy] of neighbors) {
                let nx = cx + dx;
                let ny = cy + dy;

                if (nx >= 0 && nx < cols && ny >= 0 && ny < rows && 
                    grid[ny][nx] === 0 && !visited[ny][nx]) {
                    visited[ny][nx] = true;
                    stack.push([nx, ny]);
                }
            }
        }
        return count;
    }

    function calculateScore() {
        let totalRange = 0;
        
        // Sum the area available to EVERY horse
        horses.forEach(h => {
            const gx = Math.floor(h.x / cellSize);
            const gy = Math.floor(h.y / cellSize);
            totalRange += getPastureSize(gx, gy);
        });

        totalScore = totalRange;
        scoreDisplay.innerText = totalScore.toLocaleString();
        removalsDisplay.innerText = removalsLeft;

        if (removalsLeft <= 0) {
            finalScoreDisplay.innerText = totalScore.toLocaleString();
            gameOverScreen.style.display = 'block';
        }
    }

    function drawFences() {
        ctx.strokeStyle = '#5d4037';
        ctx.lineWidth = 2;

        for (let y = 0; y < rows; y++) {
            for (let x = 0; x < cols; x++) {
                if (grid[y][x] === 1) {
                    const px = x * cellSize + cellSize/2;
                    const py = y * cellSize + cellSize/2;
                    
                    // Post
                    ctx.fillStyle = '#6d4c41';
                    ctx.fillRect(px-4, py-4, 8, 8);

                    // Rails
                    if (x + 1 < cols && grid[y][x+1] === 1) {
                        ctx.beginPath();
                        ctx.moveTo(px, py);
                        ctx.lineTo(px + cellSize, py);
                        ctx.stroke();
                    }
                    if (y + 1 < rows && grid[y+1][x] === 1) {
                        ctx.beginPath();
                        ctx.moveTo(px, py);
                        ctx.lineTo(px, py + cellSize);
                        ctx.stroke();
                    }
                }
            }
        }
    }

    function animate() {
        ctx.fillStyle = '#a8d5ba'; // Grass
        ctx.fillRect(0, 0, width, height);

        drawFences();
        
        horses.forEach(h => {
            h.update();
            h.draw();
        });

        requestAnimationFrame(animate);
    }

    canvas.addEventListener('mousedown', (e) => {
        if (removalsLeft <= 0) return;

        const rect = canvas.getBoundingClientRect();
        const gx = Math.floor((e.clientX - rect.left) / cellSize);
        const gy = Math.floor((e.clientY - rect.top) / cellSize);

        if (gy >= 0 && gy < rows && gx >= 0 && gx < cols) {
            if (grid[gy][gx] === 1) {
                grid[gy][gx] = 0;
                removalsLeft--;
                calculateScore();
                
                // Visual feedback circle
                ctx.fillStyle = 'white';
                ctx.beginPath();
                ctx.arc(e.clientX, e.clientY, 30, 0, Math.PI*2);
                ctx.fill();
            }
        }
    });

    function resetGame() {
        init();
    }

    window.addEventListener('resize', init);
    init();
    animate();

</script>
</body>
</html>
